<!doctype html>
<html>

<head>
  <% include ./sm_head %>
  <style>
  .star{
    font-size: 15px;
    color: #ffa500;
    font-family: arial;
  }

  .not{
    font-size: :15px;
    color: #cccccc;
    font-family: arial;
  }
  </style>

  <script>

  </script>

</head>

<body>
  <!-- 네이게이션 상단 부분 -->
  <% include ./sm_top_navigator %>
  <script>

  </script>

  <div class="container" style="height:480px;">
    <h2 style="margin-left:3%;"><img src="/img/online-shop.png" width="37" style="margin-left:5%;" />
      <strong> Sell Product </strong></h2>
    <hr/>
      <div class="row" style="width:94%; margin-left:3%; margin-top:3%">


          <div class="col-xs-12 col-md-6 col-md-offset-3">
          <form id="form" name="form" class="input-group" method="get">
            <div class="input-group-btn">
              <select class="btn btn-default selectpicker" id="category" name="category" style="height: 34px; -webkit-appearance: none; color:black" disabled>
                <option value="상품명">상품명</option>
              </select>
            </div>
            <input type="text" id="searchText" name="searchText" class="form-control" placeholder="상품명을 검색하세요.." />
            <span class="input-group-btn">
              <button class="btn btn-default" type="button" onclick="submitCheck();">
                <span class="glyphicon glyphicon-search"></span>
              </button>
            </span>
          </form>
        </div>

        <div class="col-xs-12 col-md-11" style="margin-top:5%">
          <a href="/sm_addSellingItems">
          <button type="button" class="btn btn-primary" style="display:inline; float:right;" onclick="allow()">
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span> 상품 등록
          </button>
          </a>

        </div>

        <div class="col-xs-12 col-md-10 col-md-offset-1" style="margin-top:3%">
          <br/>
        <table class="table table-hover table-striped">
          <thead class="text-center">
            <tr style="border-bottom:1px solid black;">
              <td style="width:15%;"><strong>No.</strong></td>
              <td><strong>상품명</strong></td>
              <td><strong>남은 시간</strong></td>
            </tr>
          </thead>
          <tbody class="text-center">
            <% for (i=0; i<`${rows.length}`; i++) { %>
              <tr>
                <td><%= i+1 %></td>
                <td><a href="/sm_buy_itemDetail/<%= rows[i].auto %>/<%= i+1 %>"><%= rows[i].productName %></a></td>
                <td>남은시간</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
  <hr>
  <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>
</body>
<!-- Footer -->

<% include ./sm_footer %>
</html>
