<!DOCTYPE html>
<html>
    <head>
      <meta charset="utf-8">
        <% include ./sm_head %>
        <script>

        window.onload = function(){
          var loader = document.getElementById('loader');
          var body = document.getElementById('body');
          var loadPage = document.getElementById('loadPage');

          loader.style.display="none";
          body.style.backgroundColor="#ffffff";
          loadPage.style.display="";

          $('#loader').hide();

          if(<%= `${loginon}` %> === 1){
            alert('해당하는 아이디 정보가 없습니다 :)');
          } else if(<%= `${loginon}` %> === 2){
            alert('비밀번호가 틀렸습니다 :)');
          }
        }

        function submitCheck(){

            var submitAfter = document.getElementById("submitAfter");
            var submitBefore = document.getElementById("submitBefore");

            submitAfter.style.display="";
            submitBefore.style.display="none";

            form.submit();
            return true;
        }

        function signup(){
          var signupAfter = document.getElementById("signupAfter");
          var signupBefore = document.getElementById("signupBefore");

          signupAfter.style.display="";
          signupBefore.style.display="none";

          location.href='/sm_signup';
        }

        function find(){
          var findAfter = document.getElementById("findAfter");
          var findBefore = document.getElementById("findBefore");

          findAfter.style.display="";
          findBefore.style.display="none";

          location.href='/find';
        }

        </script>
        <style>
        /*body{
          height: 100%;
          background : url(sookmyung.jpg);
          background-repeat:no-repeat;
          background-size: 100% 100%;
        }*/
        *{
          font-family:'THE외계인설명서';
        }
        html{
          margin-top: 9%;
        }
        .btn{
          box-shadow: 3px 3px 10px #dad7d7;
        /*background-color: blue;*/

        }

        #loader {
          position: absolute;
          left: 50%;
          top: 50%;
          z-index: 1;
          width: 150px;
          height: 150px;
          margin: -75px 0 0 -75px;
          border: 16px solid #f3f3f3;
          border-radius: 50%;
          border-top: 16px solid #3498db;
          width: 120px;
          height: 120px;
          -webkit-animation: spin 2s linear infinite;
          animation: spin 2s linear infinite;
        }

        @-webkit-keyframes spin {
          0% { -webkit-transform: rotate(0deg); }
          100% { -webkit-transform: rotate(360deg); }
        }

        @keyframes spin {
          0% { transform: rotate(0deg); }
          100% { transform: rotate(360deg); }
        }


        </style>
    </head>

    <body id="body">

      <div id="loader"></div>

      <div style="display:none" id="loadPage">
        <div class="container">
        <div class="row text-center">
          <h1 style="font-size:70px; text-shadow: 0px 2px #ffffff, 4px 4px 0px #dad7d7;">Sook's Market</h1>
        </div>
        <div class="row text-center">
          <img src="/img/index.gif" width="80" />
        </div>
        <form style="margin-top: 50px;" action="/index" method="post" class="form-horizontal" onsubmit="return submitCheck()">
          <div class="form-group ">
              <label class="col-sm-4 control-label">아이디 :</label>
              <div class="col-sm-5">
                <input type="text" class="form-control" name="username" id="target" placeholder="아이디를 입력해주세요.">
              </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label">패스워드 :</label>
            <div class="col-sm-5">
              <input type="password" class="form-control"  name="password" id="target" placeholder="비밀번호를 입력해주세요.">
            </div>
          </div>
          <div class="form-group">
            <div class="text-center">
              <button class="btn btn-primary" id="submitAfter" style="display:none" disabled><i class="fa fa-circle-o-notch fa-spin"></i> 로그인</button>
              <input type="submit" value="로그인" class="btn btn-primary" id="submitBefore" name="loginBtn"/>
              <button class="btn btn-primary" id="signupAfter" style="display:none" disabled><i class="fa fa-circle-o-notch fa-spin"></i> 회원가입</button>
              <input type="button" value="회원가입" class="btn btn-primary" id="signupBefore" onclick="signup()" />
              <button class="btn btn-primary" id="findAfter" style="display:none" disabled><i class="fa fa-circle-o-notch fa-spin"></i> 아이디/비밀번호 찾기</button>
              <input type="button" value="아이디/비밀번호 찾기" class="btn btn-primary" id="findBefore" onclick="find()" />
              <!-- <input type="button" value="testing" class="btn btn-primary" onclick="location.href='/sm_selectTime/42/1'" /> -->
            </div>
          </div>
        </form>
      </div>
      </div>


    </body>

</html>
